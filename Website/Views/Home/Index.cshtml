@model dynamic

@{
    ViewBag.Title = "TC build monitor";
}

<script>
    $(function () {

        var model = {
            teamCityUrl: ko.observable("")
        };

        ko.applyBindings(model);


        $.ajax({
            url: "/admin/config/tc/url",
            method: "GET"
        }).done(function(data) {
            if (data) {
                model.teamCityUrl(data);
            }
        });

        $("#submit").on("click", function (e) {
            e.preventDefault();
            $.ajax({
                url: "/admin/config/tc/url",
                method: "POST",
                data: {Uri :  $("#url").val()}
            }).done(function () {
                
            });
        });
    });
</script>

<div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1 id="forms">Forms</h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="well">
                    <form class="bs-example form-horizontal">
                        <fieldset>
                            <legend>Legend</legend>
                            <div class="form-group">
                                <label for="url" class="col-lg-2 control-label">TeamCity Url</label>
                                <div class="col-lg-10">
                                    <input data-bind="value: teamCityUrl" type="text" class="form-control" id="url" placeholder="TeamCity root url">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10 col-lg-offset-2">
                                    <button type="button" class="btn btn-primary" id="submit">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

</div>